link(rel="stylesheet" href="/css/components/init_container/host_tab.css")
.d-flex.flex-column 
    .input-row-v 
        .input-label Game type 
        .input-container 
            .d-flex.flex-row 
                input#play-local(type="radio" name="play-type" value="local")
                label(for="play-local" data-bs-toggle="tooltip" data-bs-title="Requires keyboard, pen, and paper, and all players and host to be present. Best done with a dual screen. Not recommended with mobile") Local
                input#play-remote(type="radio" name="play-type" value="remote" checked)
                label(for="play-remote" data-bs-toggle="tooltip" data-bs-title="Requires internet connection. Players may join with join code on mobile devices or use a keyboard and/or buzzer on this device. Host may open the control panel on this device or another device") Remote
    .input-row-v
        .input-label Load game file
        .input-container
            .d-flex.flex-column
                .d-flex.flex-row
                    input#load-local(type="radio" name="load-type" value="local")
                    label(for="load-local") From Computer
                    input#load-remote(type="radio" name="load-type" value="remote" checked)
                    label(for="load-remote") From Server
                .local-load.my-3
                    label.btn.btn-primary(for="game-file") Choose file (max 20kb)
                    input#game-file.d-none(type="file" accept=".json")
                    .load-file-name
                .remote-load.my-3
                    each file in files
                        .file(data-file=`${file.name}` aria-selected="false" aria-filename=`${file.name}` data-metadata=`${file.metadata ? JSON.stringify(file.metadata) : ''}`)= file.name
            .game-metadata
    button#create-game.btn.btn-primary.m-auto.mt-3.w-50 Create